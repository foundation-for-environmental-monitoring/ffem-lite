<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instruction_lyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/black"
        android:paddingTop="4dp"
        android:paddingBottom="3dp"
        android:src="@drawable/card_overlay" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="Instructions"
        android:textColor="#ddd"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:clickable="false"
        android:columnCount="2"
        android:focusable="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="3dp"
            android:text="1."
            android:textColor="#ddd"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"

            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:lineSpacingExtra="3dp"
            android:paddingStart="2dp"
            android:paddingTop="3dp"
            android:text="Place the card and cuvette with the water sample on the provided stand."
            android:textColor="#ddd"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:clickable="false"
        android:columnCount="2"
        android:focusable="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:paddingStart="0dp"
            android:text="2."
            android:textColor="#ddd"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When ready point the phone camera at it."
            android:textColor="#ddd"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:clickable="false"
        android:columnCount="2"
        android:focusable="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:paddingStart="0dp"
            android:text="3."
            android:textColor="#ddd"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click start below to launch the camera preview."
            android:textColor="#ddd"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:clickable="false"
        android:columnCount="2"
        android:focusable="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:paddingStart="0dp"
            android:text="4."
            android:textColor="#ddd"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When the camera starts, align the card in the viewer as shown in the example above."
            android:textColor="#ddd"
            android:textSize="15sp" />
    </TableRow>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_test_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:minWidth="200dp"
        android:padding="10dp"
        android:text="@string/start"
        android:textSize="17sp" />
</LinearLayout>