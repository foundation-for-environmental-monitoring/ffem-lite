<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Collect</item>
    </style>

    <style name="Theme.App.AppBarOverlay" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.Lite.PopupOverlay" parent="Theme.MaterialComponents.DayNight" />

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonThemeOverlay</item>
    </style>

    <style name="ButtonThemeOverlay">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ImpButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ImpButtonThemeOverlay</item>
    </style>

    <style name="ImpButtonThemeOverlay">
        <item name="android:backgroundTint">@color/button_state</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="CustomCardView" parent="CardView">
        <item name="cardCornerRadius">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <declare-styleable name="StopWatchView">
        <attr name="circleColor" format="color" />
    </declare-styleable>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>